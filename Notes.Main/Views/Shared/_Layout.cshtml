<!DOCTYPE html>
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- jQuery Validation Plugin -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<!-- jQuery Unobtrusive Validation (to bridge ASP.NET Core MVC validation with jQuery Validate) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
@{
    bool isAuth = (bool?)ViewData["IsAuth"] ?? false;
    string userName = (string)ViewData["UserName"]!;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Мегаредактор онлайн-заметок 2000 | @ViewBag.Title</title>
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
    <meta charset="utf-8" />
    <div class="outer-div main-title">
        <h1>
            Мегаредактор онлайн-заметок 2000
        </h1>
    </div>
    @if(isAuth)
    {
        <div class="outer-div" style="height: auto">
            <p>
                Добро пожаловать, <b>@userName</b>! <a href="/Home/Logout">Выйти</a>
            </p>
        </div>
    }
</head>
<body>
    <div class="wrapper">
        <div class="side-bar">
            <a class="button sidebar" href="/Home/Index">Главная страница</a>
            @if (isAuth)
            {
                <a class="button sidebar" href="/User/Main">Мои заметки</a>
                <a class="button sidebar" href="/User/Settings">Настройки аккаунта</a>
            }
            else
            {
                <a class="button sidebar" href="/Home/Register">Зарегистрироваться</a>
                <a class="button sidebar" href="/Home/Login">Войти</a>
            }
        </div>
        <div>
            <div class="outer-div sub-title"><h2>@ViewBag.Title</h2></div>
            <div>
                @RenderBody()
            </div>
        </div>

    </div>
    <div class="outer-div">
        <footer><span>Made by ZanderMeister, 2025 (c) copyright lololol</span></footer>
    </div>
</body>
</html>
